{% extends '::base.html.twig' %}

{% block page %}
    <div id="page" class="inner-width">
        <p style="margin-top: 20px;">&nbsp;&nbsp; Hello {{ user.username }}</p>
        {% if(user.profile.photo) %}
            <img src="{{ asset('/uploads/users/'~user.profile.photo) }}" class="img-circle img-user">
        {% elseif user.profile.gender == 'Mr' %}
            <img src="{{ asset('/bundles/shareitmain/img/default-user-m.png') }}" alt="..." class="img-circle img-user">
        {% else %}
            <img src="{{ asset('/bundles/shareitmain/img/default-user-f.png') }}" alt="..." class="img-circle img-user">
        {% endif %}
        <form class="pure-form pure-form-stacked" method="POST" action="{{ path('my_account') }}" novalidate="novalidate" enctype="multipart/form-data">
            </br>
            <p class="pure-u-1-2 form-text">
                <input type="hidden" id="gender" name="profile[gender]" maxlength="255" tabindex="7" style="width:250px;" readonly="readonly" value="{{ user.profile.gender }}">
                {% if form_errors(form.gender) %}
                    <span class="error">adsas</span>
                {% endif %}
            </p>

            <div class="pure-g-r">
                <p class="pure-u-1-2 form-text">
                    <label for="fistname">Firstname *</label></br>
                    {{ form_widget(form.firstname, {'attr': {'class': 'checkfield required name', 'tabindex': '1', 'style':'width:250px;' },'id':'fistname' }) }}
                    {% if form_errors(form.firstname) %}
                        <span class="error">adsas</span>
                    {% endif %}
                </p>

                <p class="pure-u-1-2 form-text">
                    <label for="lastname">Lastname *</label></br>
                    {{ form_widget(form.lastname, {'attr': {'class': 'checkfield required name', 'tabindex': '2', 'style':'width:250px;' },'id': 'lastname' }) }}
                    {% if form_errors(form.lastname) %}
                        <span class="error">adsas</span>
                    {% endif %}
                </p>

                <p class="pure-u-1-2 form-text">
                    <label for="lastname">Email *</label></br>
                    <input type="text" id="email" maxlength="255" tabindex="7" style="width:250px;" readonly="readonly" value="{{ user.email }}">
                </p>

                <p class="pure-u-1-2 form-text">
                    <label for="lastname">Username *</label></br>
                    <input type="text" id="username" maxlength="255" tabindex="7" style="width:250px;" readonly="readonly" value="{{ user.username }}">
                </p>

                <p class="pure-u-1-2 form-text">
                    <label for="town">City</label></br>
                    {{ form_widget(form.city, {'attr': {'tabindex': '7', 'style':'width:250px;' },'id':'town' }) }}
                    {% if form_errors(form.city) %}
                        <span class="error">adsas</span>
                    {% endif %}
                </p>

                <p class="pure-u-1-2 form-text">
                    <label for="address">Address</label></br>
                    {{ form_widget(form.address, {'attr': {'tabindex': '8' , 'style':'width:250px;' }}) }}
                    {% if form_errors(form.address) %}
                        <span class="error">adsas</span>
                    {% endif %}
                </p>

                <p class="pure-u-1-2 form-text">
                    <label for="zipcode">Zipcode</label></br>
                    {{ form_widget(form.zipcode, {'attr': {'class': 'checkfield zipcode', 'tabindex': '9', 'style':'width:250px;' },'id':'zipcode' }) }}
                    {% if form_errors(form.zipcode) %}
                        <span class="error">adsas</span>
                    {% endif %}
                </p>

                <p class="pure-u-1-2 form-text">
                    <label for="phone">Phone</label></br>
                    {{ form_widget(form.phone, {'attr': {'class': 'checkfield phone', 'tabindex': '10', 'style':'width:250px;' },'id':'phone' }) }}
                    {% if form_errors(form.phone) %}
                        <span class="error">adsas</span>
                    {% endif %}
                </p>

                <p class="pure-u-1-2 form-text">
                    <label for="phone">Company</label></br>
                    {{ form_widget(form.company, {'attr': {'tabindex': '11' , 'style':'width:250px;'} }) }}
                    {% if form_errors(form.company) %}
                        <span class="error">adsas</span>
                    {% endif %}
                </p>


                <p class="pure-u-1-2 form-text">
                    <label for="phone">Photo</label></br>
                    {{ form_widget(form.file, {'attr': { 'tabindex': '12', } }) }}
                    {% if form_errors(form.file) %}
                        <span class="error">adsas</span>
                    {% endif %}
                </p>

                <p class="pure-u-1-2 ">
                    <label for="phone">Description</label></br>
                    {{ form_widget(form.description, {'attr': { 'tabindex': '13', 'style':'width:250px;', 'rows': 10 } }) }}
                    {% if form_errors(form.description) %}
                        <span class="error">adsas</span>
                    {% endif %}
                </p>
            </div>
            <p>* Mandatory fields</p>

            <p class="pure-u-1-2 form-submit txt-c">
                <button type="submit" class="btn btn-l bg-blue" tabindex="12" id='registration-button'>
                    Modify
                    <span class="icon icon-arrow-right"></span>
                </button>
            </p>
            {{ form_widget(form._token) }}
        </form>

    </div>
{% endblock %}
